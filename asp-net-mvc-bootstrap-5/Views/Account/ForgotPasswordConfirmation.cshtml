@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutAccount";
}

<div class="row">
    <div class="col">
        <h6 class="display-6 py-5 text-center">Forgot Password Confirmation</h6>
        <form>
            <div class="form-group mb-3">
                <div class="alert alert-warning text-center">
                    <i class="fa-solid fa-envelope-circle-check fa-5x py-3"></i>
                    <p class="justif">
                        <strong>Atention!</strong> We will send you a confirmation email soon, if you not receive the confirmation email,
                        please check your spam box after send a new request.
                    </p>
                    <a class="btn btn-warning w-100 mt-3" asp-controller="Account" asp-action="Login">Back to login</a>
                    <a class="btn btn-dark w-100 mt-3" asp-controller="Account" asp-action="ForgotPassword">Send new request</a>
                </div>
            </div>
            <div class="form-group mb-3">
            </div>
        </form>
    </div>
</div>